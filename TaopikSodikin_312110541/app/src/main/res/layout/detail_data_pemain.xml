<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/image_pemain"
        android:layout_width="411dp"
        android:layout_height="297dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/abbi" />
    <TextView
        android:id="@+id/textDataPribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:text="data pribadi"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama:" />
        <TextView
            android:id="@+id/txtNamaPemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0B0A"
            android:text="abbi" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat lahir :" />
        <TextView
            android:id="@+id/txttinggalPemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0B0A"
            android:text="depok" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tanggal lahir :" />
        <TextView
            android:id="@+id/txttanggallhrPemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0B0A"
            android:text="12 Mei 2000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="posisi :" />
        <TextView
            android:id="@+id/txtposisiPemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0B0A"
            android:text="GK" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi :" />
        <TextView
            android:id="@+id/txttinggiPemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0B0A"
            android:text="2.00m" />
    </LinearLayout>

    <Button
        android:id="@+id/btnclose"
        android:text="Close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />



</LinearLayout>